<?xml version="1.0"?>
<config>
	<modules>
		<Makina_SimpleTopMenu>
			<version>0.1.0</version>
		</Makina_SimpleTopMenu>
	</modules>
	<frontend>
		<layout>
			<updates>
				<simpletopmenu>
					<file>makina/simpletopmenu.xml</file>
				</simpletopmenu>
			</updates>
		</layout>
	</frontend>
	<adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <simpletop_menu translate="title" module="simpletopmenu">
                                            <title><![CDATA[Makina SimpleTop Menu]]></title>
                                            <sort_order>2000</sort_order>
                                        </simpletop_menu>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
	<global>
		<blocks>
			<catalog>
				<rerite>
					<navigation>Makina_SimpleTopMenu_Block_Navigation</navigation>
				</rerite>
			</catalog>
			<page>
				<rewrite>
					<html_topmenu>Makina_SimpleTopMenu_Block_TopMenu</html_topmenu>
				</rewrite>
			</page>
			<simpletopmenu>
				<class>Makina_SimpleTopMenu_Block</class>
			</simpletopmenu>
		</blocks>
		<helpers>
			<simpletopmenu>
				<class>Makina_SimpleTopMenu_Helper</class>
			</simpletopmenu>
		</helpers>
	</global>
	<default>
		<simpletop_menu>
			<general>
				<enabled>1</enabled>
				<display_empty_categories>1</display_empty_categories>
				<max_level>3</max_level>
				<version>0.1.0</version>
			</general>
			<columns>
				<count>3</count>
			</columns>
		</simpletop_menu>
	</default>
</config>